<UserControl x:Class="CityGuide.ViewElements.TimeTableEventAttraction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*" />
            <RowDefinition Height="15" />
        </Grid.RowDefinitions>
       <Label Content="Label" HorizontalAlignment="Stretch" Name="AttrationNameLabel" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" FontStretch="Normal" />
        <Button Grid.Row="0" Content="Lock" Height="23"  Name="LockButton" VerticalAlignment="Top" Width="45" HorizontalAlignment="Right" Margin="0,2,3,0"/>
        <Canvas Height="15" HorizontalAlignment="Stretch" Name="ResizeCanvas" VerticalAlignment="Top" Grid.Row="1">
            <Canvas.Background>
                <ImageBrush ImageSource="/CityGuide;component/Resources/EventRezise.png" Stretch="Fill" TileMode="FlipXY"/>
            </Canvas.Background>
        </Canvas>
    </Grid>
</UserControl>
