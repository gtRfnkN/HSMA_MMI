<UserControl x:Class="CityGuide.ViewElements.TimeTableEvent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Loaded="UserControl_Loaded">
    <Grid Height="45" Width="150">
        <Grid.RowDefinitions>
            <RowDefinition Height="30*" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>
       <Label Content="Label" HorizontalAlignment="Stretch" Name="AttrationNameLabel" VerticalAlignment="Stretch" Width="299" FontStretch="Normal" />
        <Button Grid.Row="0" Content="Lock" Height="23"  Name="LockButton" VerticalAlignment="Top" Width="39" Margin="109,3,2,0" />
        <Canvas Height="15" HorizontalAlignment="Stretch" Name="ResizeCanvas" VerticalAlignment="Top" Grid.Row="1">
            <Canvas.Background>
                <ImageBrush ImageSource="/CityGuide;component/Resources/EventRezise.png" Stretch="Fill" TileMode="FlipXY"/>
            </Canvas.Background>
        </Canvas>
    </Grid>
</UserControl>
