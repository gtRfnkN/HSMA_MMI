<UserControl x:Class="CityGuide.ViewElements.TimeTableEvent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DesignHeight="45" d:DesignWidth="150">
    <UserControl.Foreground>
        <ImageBrush />
    </UserControl.Foreground>
    <Grid Height="45" Width="150">
        <Grid.RowDefinitions>
            <RowDefinition Height="30*" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>
       <Label Content="Label" HorizontalAlignment="Stretch" Name="AttrationNameLabel" VerticalAlignment="Stretch" Width="299" FontStretch="Normal" />
        <Button Content="Lock" Height="23"  Name="LockButton" VerticalAlignment="Top" Width="39" Click="LockButton_Click" Margin="109,3,2,0" />
        <Canvas Height="15" HorizontalAlignment="Stretch" Name="ResizeCanvas" VerticalAlignment="Top" Grid.Row="1">
            <Canvas.Background>
                <ImageBrush ImageSource="/CityGuide;component/Resources/EventRezise.png" Stretch="Fill" TileMode="FlipXY"/>
            </Canvas.Background>
        </Canvas>
    </Grid>
</UserControl>
